# move about in workspaces
bindsym $mod+c workspace next
bindsym $mod+x workspace prev

# move workspace
bindsym $mod+m move workspace to right
bindsym $mod+n move workspace to left

# back and forth
bindsym $mod+b workspace back_and_forth

# lazy window switcher
