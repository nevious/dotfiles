bindsym $mod+Shift+6 move container to workspace $WS6
bindsym $mod+Shift+7 move container to workspace $WS7
bindsym $mod+Shift+8 move container to workspace $WS8
bindsym $mod+Shift+9 move container to workspace $WS9
bindsym $mod+Shift+0 move container to workspace $WS10

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
bindsym $mod+Mod1+h resize grow left 10px or 10 ppt
bindsym $mod+Mod1+j resize grow down 10px or 10 ppt
bindsym $mod+Mod1+k resize grow up 10px or 10 ppt
bindsym $mod+Mod1+l resize grow right 10px or 10 ppt
bindsym $mod+Shift+Mod1+h resize grow left 10px or 10 ppt
bindsym $mod+Shift+Mod1+j resize grow down 10px or 10 ppt
bindsym $mod+Shift+Mod1+k resize grow up 10px or 10 ppt
bindsym $mod+Shift+Mod1+l resize grow right 10px or 10 ppt

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
	colors {
		background	$generic_gray
		statusline	#dedede
		separator	#666666

		# class				border	backgr. text
		focused_workspace	$main-blue $main-blue $white
		active_workspace	$generic_gray $generic_gray $white
		inactive_workspace	$generic_gray $generic_gray $light_gray
		urgent_workspace	$urgent_border $urgent_background $white
	}

	#font pango:DejaVu Sans Mono, Icons 8
	font pango:DejaVu Sans Mono, FontAwesome5Free solid 7
	position bottom
	status_command i3blocks
	tray_output primary
}

